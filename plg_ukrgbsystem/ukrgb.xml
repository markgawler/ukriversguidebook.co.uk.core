<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="system" method="upgrade">
	<name>PLG_SYSTEM_UKRGB</name>
	<creationDate>January 2015</creationDate>
	<author>Mark Gawler</author>
	<authorEmail>markg@wler.co.uk</authorEmail>
	<authorUrl>www.ukriversguidebook.co.uk</authorUrl>
	<copyright>Copyright UKRGB</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<version>0.0.3</version>
	<description>PLG_SYSTEM_UKRGB_XML_DESCRIPTION</description>

	<files>
	    <folder>language</folder>
   		<filename plugin="ukrgb">ukrgb.php</filename>
   		<filename>index.html</filename>
	</files>
	
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.plg_system_ukrgb.sys.ini</language>
	</languages>
	
	<config>
		<fields name="params" addfieldpath="/administrator/components/com_ukrgb/fields">
			<fieldset name="basic">
			<field name="forummenuitem" 
				type="menuitem" 
				default="0" 
				label="Select forum menu item" 
				description="Select the menu item for the forum to apply the Donate button to." />
			
			<field name="JFusionPluginParam" type="JFusionAdvancedParam" default="" label="JFUSION_PLUGIN" feature="activity" description="JFUSION_PLUGIN_DESCR"  />
					
			<field name="selected_forums" type="forumlist" default=""
                       label="Select Forums"
                       description="Select forums to display the PayPlal donate button."  />	
				
			</fieldset>
		</fields>
	</config>
</extension>

