<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.1.0" client="site" method="upgrade">
    <name>UKRGB Nest Cam</name>
    <author>Mark Gawler</author>
    <version>1.0.0</version>
    <description>A module to insert a Nest Cam video</description>
    <files>
        <filename>mod_ukrgbnestcam.xml</filename>
        <filename module="mod_ukrgbnestcam">mod_ukrgbnestcam.php</filename>
        <filename>index.html</filename>
        <folder>tmpl</folder>
    </files>
    <config>
    <fields name="params">
		<fieldset name="basic">
			<field name="Srcurl" label="Video URL" description="URL of video steam" type="URL">
			</field>
            <field name="Articleid" label="ID of Article" description="allows fine control of the article the video is permitted to display in (0 = any)" type="number" default="0" min="0">
            </field>
            <field name="AcknowledgmentPrefix" label="Acknowledgment Prefix Text" description="Prefix text to appear before the acknowledgement" type="text" default="" >
            </field>
            <field name="AcknowledgmentLink" label="Acknowledgment Link" description="Acknowledgment URL" type="URL" default="" >
            </field>
            <field name="AcknowledgmentName" label="Acknowledgment Link Text" description="Name of organisation being acknowledged." type="text" default="" >
            </field>
        </fieldset>
	</fields>
    </config>
</extension>