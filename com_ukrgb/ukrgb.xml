<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="1.6.0" method="upgrade">

	<name>com_ukrgb</name>
	<creationDate>December 2014</creationDate>
	<author>Mark Gawler</author>
	<authorEmail>markg@wler.co.uk</authorEmail>
	<authorUrl>http://www.ukriversguidebook.co.uk</authorUrl>
	<copyright>Copyright Info</copyright>
	<license>License Info</license>
	<version>0.0.15</version>
	<description>UKRGB component River Guides, PayPal donations and Events</description>

	<install> <!-- Runs on install -->
		<sql>
			<file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
		</sql>
	</install>
	<uninstall> <!-- Runs on uninstall -->
		<sql>
			<file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
		</sql>
	</uninstall>

	<update> <!-- Runs on update -->
		<schemas>
			<schemapath type="mysql">sql/updates/mysql</schemapath>
		</schemas>
	</update>
	
	<!-- Site Main File Copy Section -->
	<!-- Note the folder attribute: This attribute describes the folder
		to copy FROM in the package to install therefore files copied
		in this section are copied from /site/ in the package -->
	<files folder="site">
		<filename>index.html</filename>
		<filename>ukrgb.php</filename>
		<filename>controller.php</filename>
		<filename>router.php</filename>
		<folder>views</folder>
		<folder>models</folder>
		<folder>helpers</folder>
		<folder>language</folder>
		<folder>controllers</folder>
		
	</files>
	
	
	<administration>
		<!-- Administration Menu Section -->
		<menu>COM_UKRGB_CORE</menu>
			<submenu>
				<menu link="option=com_ukrgb&amp;view=eventmanager" view="eventmanager" img="class:generic"
				alt="Ukrgb/Eventmanager">COM_UKRGB_EVENT_MGR</menu>
				<menu link="option=com_ukrgb&amp;view=donation" view="donation" img="class:generic"
				alt="Ukrgb/Donation">COM_UKRGB_DONATION_MGR</menu>
				<menu link="option=com_ukrgb&amp;view=tagtool" view="tagtool" img="class:generic"
				alt="Ukrgb/Tagtool">River Grading Tool</menu>
			</submenu>
		
		<files folder="admin">
			<!-- Admin Main File Copy Section -->
			<filename>index.html</filename>
			<filename>ukrgb.php</filename>
			<filename>access.xml</filename>
			<filename>config.xml</filename>
			<filename>controller.php</filename>
			
			<folder>models</folder>
			<folder>views</folder>
			<folder>sql</folder>
			<folder>tables</folder>
			<folder>fields</folder>
			<folder>controllers</folder>
			<folder>helpers</folder>
		</files>
		<languages folder="admin">
			<language tag="en-GB">language/en-GB/en-GB.com_ukrgb.ini</language>
			<language tag="en-GB">language/en-GB/en-GB.com_ukrgb.sys.ini</language>
		</languages>
	</administration>

</extension>

